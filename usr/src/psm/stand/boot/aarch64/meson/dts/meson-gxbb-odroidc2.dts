/dts-v1/;
/memreserve/ 0x00000000 0x01000000;	// secure
/memreserve/ 0x10000000 0x00200000;	// secure share

#include "meson-gxbb.dtsi"

/ {
	mfg-name = "SUNW,meson";
	model = "Hardkernel ODROID-C2";
	compatible = "SUNW,meson", "hardkernel,odroid-c2", "amlogic,meson-gxbb";

	chosen {
		stdout-path = &uart_AO;
		impl-arch-name = "SUNW,meson";
	};

	memory@0 {
		device_type = "memory";
		reg = <0x0 0x0 0x0 0x80000000>;
	};
};

&sd {
	status = "okay";

	sd {
		status = "okay";
	};
};

&uart_AO {
	status = "okay";
};
&dwmac {
	status = "okay";
};
&i2c_a {
	status = "okay";

	/* Hardkernel I2C RTC */
	pcf8563: pcf8563@51	{
		status = "okay";
		compatible = "nxp,pcf8563";
		reg = <0x51>;
		#clock-cells = <0>;
	};
};
&i2c_b {
	status = "okay";
};
